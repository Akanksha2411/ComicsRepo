@model IEnumerable<Comic.Models.ComicModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Comics</h2>

@using (Html.BeginForm("Index", "Comics", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="form-group">
    <div class="input-group-append">
        @Html.TextBox("name", "Search")
        <input type="submit" class="btn btn-default" value="SUBMIT" name="submitButton">
    </div>
    @if (@Model.Count() > 0)
    {
<table class="table-striped">
    <tr class="form-group">
        <th class="modal-header" align="center">Comics</th>
    </tr>
    @foreach (Comic.Models.ComicModel item in @Model)
    {
        <tr class="form-group">
            <td class="modal-body">
                @(item.name ?? "Search For Comics")
            </td>
        </tr>
    }

    @for (int i = 0; i < @Model.ToList().Count; i++)
    {
        @Html.HiddenFor(m => @Model.ToList()[i].name)
    }



</table>
        <input type="submit" class="btn btn-default" name="submitButton" value="SAVE" id="btnRedirect" />

    }

</div>


}



